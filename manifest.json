{
  "manifest_version": 3,
  "name": "Task Time Tracker",
  "version": "1.0",
  "description": "Track time spent on your tasks",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "icons": {
    "16": ".icons/TT16.png",
    "32": ".icons/TT32.png",
    "48": ".icons/TT48.png",
    "128": ".icons/TT128.png"
  }
}